<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/v"
    tools:context=".Home"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:background="@color/best"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.google.android.material.tabs.TabLayout>


        <!--       Cart layout            -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll">




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/search_field"
                android:layout_marginTop="10dp"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    <!--       Cart layout  ENDs           -->
    <!--    Home LAYOUT        -->

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ss"
       android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:id="@+id/cardview"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:clipToPadding="false"
                    android:gravity="center"

                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cloth"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/viewBg"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:src="@mipmap/cloth"
                                android:padding="10dp"></ImageView>
                            <TextView
                                android:id="@+id/res"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/best"
                                android:text="Cloth"></TextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"
                                android:layout_margin="5dp"></View>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/mobile"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:id="@+id/kk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/viewBg"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"

                                android:src="@mipmap/mobile"
                                android:padding="10dp"></ImageView>
                            <TextView
                                android:id="@+id/mobiletext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/best"
                                android:text="Mobile"></TextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"
                                android:layout_margin="5dp"></View>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/electronics"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:id="@+id/k3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/viewBg"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"

                                android:src="@mipmap/electronics"
                                android:padding="10dp"></ImageView>
                            <TextView
                                android:id="@+id/sch3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/best"
                                android:text="Electronics"></TextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"
                                android:layout_margin="5dp"></View>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ff"
                    android:layout_width="match_parent"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/car"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/viewBg"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"

                                android:src="@mipmap/car"
                                android:padding="10dp"></ImageView>
                            <TextView
                                android:id="@+id/tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/best"
                                android:text="Car"></TextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"
                                android:layout_margin="5dp"></View>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/shoes"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/viewBg"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:src="@mipmap/shoes"
                                android:padding="10dp"></ImageView>
                            <TextView
                                android:id="@+id/rep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/best"
                                android:text="Shoes"></TextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"
                                android:layout_margin="5dp"></View>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/food"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/viewBg"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"

                                android:src="@mipmap/food"
                                android:padding="10dp"></ImageView>
                            <TextView
                                android:id="@+id/rep3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/best"
                                android:text="Food"></TextView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"
                                android:layout_margin="5dp"></View>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </LinearLayout>
<ProgressBar
    android:layout_below="@+id/cardview"
    android:id="@+id/progress"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"

    android:layout_centerInParent="true"
    ></ProgressBar>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/cardview"
            android:id="@+id/recyclerid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        </RelativeLayout></androidx.core.widget.NestedScrollView>
    </LinearLayout>


    <!--   Home  ENDS     -->



    <!--   Search  Start     -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/searchrecycler"
        tools:context=".Search">




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/result_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_field"
            android:layout_marginTop="50dp">

        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>

</LinearLayout>
