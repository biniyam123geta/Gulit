<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">


    <ScrollView
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:isScrollContainer="false"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">


            <!-- machine image -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="7dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/im"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <!-- overlay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#50000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_container"
                        android:padding="12dp"
                        android:minWidth="120dp"
                        android:layout_margin="4dp"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="#ccffffff"
                       >

                        <com.chootdev.typefaced.TypeFacedTextView
                            android:id="@+id/imname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            app:textView_font="Overpass-Bold.ttf" />

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- model name and id -->
            <com.chootdev.typefaced.TypeFacedTextView
                android:id="@+id/tv_time_keeper_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                app:textView_font="Barlow-Regular.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_container"
                android:backgroundTint="@color/best">

                <!-- machine model -->
                <com.chootdev.typefaced.TypeFacedTextView
                    android:id="@+id/tv_machine_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    app:textView_font="Barlow-Bold.ttf" />

            </LinearLayout>

            <!-- status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_container"
                android:paddingBottom="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.chootdev.typefaced.TypeFacedTextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textColor="#888888"
                        android:textSize="14sp"
                        android:text="Location"
                        app:textView_font="Overpass-Regular.ttf" />

                    <com.chootdev.typefaced.TypeFacedTextView
                        android:id="@+id/tv_machine_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:textView_font="Overpass-Bold.ttf" />

                </LinearLayout>


                <Switch

                    android:id="@+id/status_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:switchMinWidth="56dp"
                    android:text="Cart:"
                    android:textColor="@color/bl"
                    android:checked="false"
                    android:textOff="OFF"
                    android:textOn="ON"/>

            </LinearLayout>

            <!-- operator -->
            <com.chootdev.typefaced.TypeFacedTextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="price"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:textView_font="Overpass-Bold.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_container"
                android:backgroundTint="#fcfcfc"
                android:padding="8dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical">


                        <TextView
                            android:id="@+id/desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="10dp"
                            android:lineSpacingExtra="2dp"
                            android:padding="5dp"
                            android:text="A moisturizing body with a sweet and refreshing aroma of Japanese cherry blossom, peony, musk, and strawberry. Will make the skin feel moist and smooth. The combination also makes long-lasting fragrance."

                            />


                </LinearLayout>


            </LinearLayout>




            <!-- separator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:background="@color/bl" />

            <!-- button container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <com.chootdev.typefaced.TypeFacedButton
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/rounded_container"
                    android:backgroundTint="@color/green"
                    android:gravity="center"
                    android:padding="16dp"

                    android:text="Call"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:button_font="Overpass-Bold.ttf" />


            </LinearLayout>

            <com.chootdev.typefaced.TypeFacedTextView
                android:id="@+id/tv_time_keeper_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                app:textView_font="Barlow-Regular.ttf" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>